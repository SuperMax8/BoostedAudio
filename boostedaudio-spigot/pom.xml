        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>16</source>
                    <target>16</target>
                    <compilerArgs>
                        <!-- Preserves parameter names for lamp reflection-->
                        <arg>-parameters</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
